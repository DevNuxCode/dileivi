---
const currentYear = new Date().getFullYear();

const menuItems = [
  { name: 'Inicio', url: '#inicio' },
  { name: 'Nosotros', url: '#nosotros' },
  { name: 'Servicios', url: '#servicios' },
  { name: 'Portafolio', url: '#portafolio' },
  { name: 'Agendar', url: '#agendar' },
];

const policyItems = [
  { name: 'Políticas', url: '#' },
  { name: 'Privacidad', url: '#' },
  { name: 'Contacto', url: '#contacto' },
];

const socialLinks = [
  { name: 'Instagram', url: 'https://instagram.com', icon: 'instagram' },
  { name: 'TikTok', url: 'https://tiktok.com', icon: 'tiktok' },
  { name: 'YouTube', url: 'https://youtube.com', icon: 'youtube' },
];
---

<footer id="contacto" class="bg-gray-900 text-white pt-16 pb-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <!-- Logo and Info -->
      <div>
        <div class="flex items-center gap-3 mb-6">
          <img src="/logo100.png" alt="Dileivi Bello Studio" class="h-12 w-auto" />
          <h3 class="text-xl font-serif font-semibold text-primary-400">Dileivi Bello Studio</h3>
        </div>
        <p class="text-gray-400 mb-4">
          Arte y profesionalismo para el cuidado de tus uñas. Creamos experiencias únicas para cada cliente.
        </p>
        <address class="text-gray-400 not-italic">
          <p class="mb-2">Santiago, Chile</p>
          <p class="mb-2">+56 9 2044 9036</p>
          <p>info@dileivibello.cl</p>
        </address>
      </div>
      
      <!-- Menu -->
      <div>
        <h3 class="text-lg font-bold mb-6 text-white">Menú</h3>
        <ul class="space-y-3">
          {menuItems.map(item => (
            <li>
              <a 
                href={item.url} 
                class="text-gray-400 hover:text-primary-400 transition-colors duration-300"
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Policies -->
      <div>
        <h3 class="text-lg font-bold mb-6 text-white">Enlaces</h3>
        <ul class="space-y-3">
          {policyItems.map(item => (
            <li>
              <a 
                href={item.url} 
                class="text-gray-400 hover:text-primary-400 transition-colors duration-300"
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Social -->
      <div>
        <h3 class="text-lg font-bold mb-6 text-white">Síguenos</h3>
        <div class="flex space-x-4 mb-6">
          {socialLinks.map(social => (
            <a 
              href={social.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="bg-gray-800 hover:bg-primary-700 p-3 rounded-full text-white transition-colors duration-300"
              aria-label={social.name}
            >
              {social.icon === 'instagram' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                  <path d="M8 0C5.829 0 5.556.01 4.703.048 3.85.088 3.269.222 2.76.42a3.917 3.917 0 0 0-1.417.923A3.927 3.927 0 0 0 .42 2.76C.222 3.268.087 3.85.048 4.7.01 5.555 0 5.827 0 8.001c0 2.172.01 2.444.048 3.297.04.852.174 1.433.372 1.942.205.526.478.972.923 1.417.444.445.89.719 1.416.923.51.198 1.09.333 1.942.372C5.555 15.99 5.827 16 8 16s2.444-.01 3.298-.048c.851-.04 1.434-.174 1.943-.372a3.916 3.916 0 0 0 1.416-.923c.445-.445.718-.891.923-1.417.197-.509.332-1.09.372-1.942C15.99 10.445 16 10.173 16 8s-.01-2.445-.048-3.299c-.04-.851-.175-1.433-.372-1.941a3.926 3.926 0 0 0-.923-1.417A3.911 3.911 0 0 0 13.24.42c-.51-.198-1.092-.333-1.943-.372C10.443.01 10.172 0 7.998 0h.003zm-.717 1.442h.718c2.136 0 2.389.007 3.232.046.78.035 1.204.166 1.486.275.373.145.64.319.92.599.28.28.453.546.598.92.11.281.24.705.275 1.485.039.843.047 1.096.047 3.231s-.008 2.389-.047 3.232c-.035.78-.166 1.203-.275 1.485a2.47 2.47 0 0 1-.599.919c-.28.28-.546.453-.92.598-.28.11-.704.24-1.485.276-.843.038-1.096.047-3.232.047s-2.39-.009-3.233-.047c-.78-.036-1.203-.166-1.485-.276a2.478 2.478 0 0 1-.92-.598 2.48 2.48 0 0 1-.6-.92c-.109-.281-.24-.705-.275-1.485-.038-.843-.046-1.096-.046-3.233 0-2.136.008-2.388.046-3.231.036-.78.166-1.204.276-1.486.145-.373.319-.64.599-.92.28-.28.546-.453.92-.598.282-.11.705-.24 1.485-.276.738-.034 1.024-.044 2.515-.045v.002zm4.988 1.328a.96.96 0 1 0 0 1.92.96.96 0 0 0 0-1.92zm-4.27 1.122a4.109 4.109 0 1 0 0 8.217 4.109 4.109 0 0 0 0-8.217zm0 1.441a2.667 2.667 0 1 1 0 5.334 2.667 2.667 0 0 1 0-5.334z"/>
                </svg>
              )}
              
              {social.icon === 'tiktok' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                  <path d="M9 0h1.98c.144.715.54 1.617 1.235 2.512C12.895 3.389 13.797 4 15 4v2c-1.753 0-3.07-.814-4-1.829V11a5 5 0 1 1-5-5v2a3 3 0 1 0 3 3V0Z"/>
                </svg>
              )}
              
              {social.icon === 'youtube' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                  <path d="M8.051 1.999h.089c.822.003 4.987.033 6.11.335a2.01 2.01 0 0 1 1.415 1.42c.101.38.172.883.22 1.402l.01.104.022.26.008.104c.065.914.073 1.77.074 1.957v.075c-.001.194-.01 1.108-.082 2.06l-.008.105-.009.104c-.05.572-.124 1.14-.235 1.558a2.007 2.007 0 0 1-1.415 1.42c-1.16.312-5.569.334-6.18.335h-.142c-.309 0-1.587-.006-2.927-.052l-.17-.006-.087-.004-.171-.007-.171-.007c-1.11-.049-2.167-.128-2.654-.26a2.007 2.007 0 0 1-1.415-1.419c-.111-.417-.185-.986-.235-1.558L.09 9.82l-.008-.104A31.4 31.4 0 0 1 0 7.68v-.123c.002-.215.01-.958.064-1.778l.007-.103.003-.052.008-.104.022-.26.01-.104c.048-.519.119-1.023.22-1.402a2.007 2.007 0 0 1 1.415-1.42c.487-.13 1.544-.21 2.654-.26l.17-.007.172-.006.086-.003.171-.007A99.788 99.788 0 0 1 7.858 2h.193zM6.4 5.209v4.818l4.157-2.408L6.4 5.209z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
        
        <div>
          <h4 class="text-white font-semibold mb-3">Suscríbete a nuestro newsletter</h4>
          <form class="flex">
            <input 
              type="email" 
              placeholder="Tu correo electrónico" 
              class="px-4 py-2 rounded-l-lg border-0 focus:outline-none bg-gray-800 text-white w-full"
            />
            <button 
              type="submit" 
              class="bg-primary-600 hover:bg-primary-700 px-4 py-2 rounded-r-lg text-white transition-colors duration-300"
            >
              Enviar
            </button>
          </form>
        </div>
      </div>
    </div>
    
    <div class="border-t border-gray-800 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-500 mb-4 md:mb-0">
          &copy; {currentYear} Dileivi Bello Studio. Todos los derechos reservados.
        </p>
        <p class="text-gray-500">
          Diseñado por <a href="#" class="text-primary-400 hover:text-primary-300">Bolt AI</a>
        </p>
      </div>
    </div>
  </div>
</footer>